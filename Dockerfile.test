FROM node:20-alpine

# Install system dependencies for testing
RUN apk add --no-cache \
    chromium \
    firefox-esr \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont

# Set Puppeteer to skip installing Chrome (we'll use system Chrome)
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

WORKDIR /app

# Copy package files for dependency installation (cache optimization)
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the application code
COPY . .

# Create directories for test results
RUN mkdir -p coverage

# Default command to run tests in watch mode
CMD ["npm", "run", "test:watch"]